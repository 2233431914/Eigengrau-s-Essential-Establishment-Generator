	<<elseif _npcphysicaltraitroll gt 6>>
		<<set $npc.physicaltrait to either($npc.tattoo)>>
	<<elseif _npcphysicaltraitroll lte 6>>
		<<set $npc.physicaltrait to either($npc.hair)>>
	<</if>>
